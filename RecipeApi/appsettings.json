{
  "AllowedOrigins": "*",
  "Authentication": {
    "JwtKey": "PRIVATE_KEY_DONT_SHAREPRIVATE_KEY_DONT_SHARE",
    "JwtExpireMinutes": 15,
    "JwtIssuer": "http://recipeapi.com"
  },
  "SMTP": {
    "Host": "smtp-relay.brevo.com",
    "Port": "587",
    "Email": "recipeapiconfirm@gmail.com"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost; Database=Recipes; Username=admin; Password=123"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
    "MinimumLevel": {
        "Default": "Information",
        "Override": {
            "Microsoft": "Warning",
            "System": "Warning"
        }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/Users/krzysztofkokot/Documents/RecipeAPILogs/serilog-all-exceptions-.json",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/Users/krzysztofkokot/Documents/RecipeAPILogs/serilog-errors-.json",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Error",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Error"
        }
      }
      ],
    "Enrich": ["FromLogContext", "WithThreadId", "WithMachineName"]
  },
  "AllowedHosts": "*"
}

